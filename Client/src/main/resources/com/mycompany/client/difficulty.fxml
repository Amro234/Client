<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.client.difficulty.DifficultyController">
   <children>
      <StackPane prefHeight="720.0" prefWidth="1280.0">
         <children>
            <Pane prefHeight="720.0" prefWidth="1280.0">
               <children>
                  <Text layoutX="254.0" layoutY="200.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Difficulty">
                     <font>
                        <Font name="System Bold" size="35.0" />
                     </font>
                  </Text>
                  <Text fill="#2d5fc3" layoutX="254.0" layoutY="225.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose your opponent level to start the match">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Text>

                  <!-- Difficulty Cards -->
                  <HBox layoutX="341.0" layoutY="254.0" prefHeight="161.0" prefWidth="675.0" spacing="20.0">
                     <children>
                        <!-- Easy Card -->
                        <VBox fx:id="easyCard" alignment="TOP_CENTER" onMouseClicked="#onCardClick" onMouseEntered="#onCardHover" onMouseExited="#onCardExit" prefHeight="130.0" prefWidth="180.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 20; -fx-cursor: hand;">
                           <children>
                              <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../assets/images/easy.png" />
                                 </image>
                              </ImageView>
                              <Label text="Easy" textFill="#1f2937">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Text fill="#6b7280" strokeType="OUTSIDE" strokeWidth="0.0" text="Random moves. Good for warming up" textAlignment="CENTER" wrappingWidth="130.0">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>

                        <!-- Medium Card -->
                        <VBox fx:id="mediumCard" alignment="TOP_CENTER" onMouseClicked="#onCardClick" onMouseEntered="#onCardHover" onMouseExited="#onCardExit" prefHeight="130.0" prefWidth="180.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 20; -fx-cursor: hand;">
                           <children>
                              <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../assets/images/med.png" />
                                 </image>
                              </ImageView>
                              <Label text="Medium" textFill="#1f2937">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Text fill="#6b7280" strokeType="OUTSIDE" strokeWidth="0.0" text="Uses basic strategy. A fair fight." textAlignment="CENTER" wrappingWidth="130.0">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Text>
                              <!-- Checkmark indicator -->
                              <StackPane prefHeight="20.0" prefWidth="160.0" StackPane.alignment="BOTTOM_RIGHT">
                                 <children>
                                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_RIGHT">
                                       <image>
                                          <Image url="@../../../assets/images/check.png" />
                                       </image>
                                       <StackPane.margin>
                                          <Insets bottom="-15.0" right="-15.0" />
                                       </StackPane.margin>
                                    </ImageView>
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>

                        <!-- Hard Card -->
                        <VBox fx:id="hardCard" alignment="TOP_CENTER" onMouseClicked="#onCardClick" onMouseEntered="#onCardHover" onMouseExited="#onCardExit" prefHeight="130.0" prefWidth="180.0" spacing="8.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-border-width: 1; -fx-padding: 20; -fx-cursor: hand;">
                           <children>
                              <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../assets/images/hard.png" />
                                 </image>
                              </ImageView>
                              <Label text="Hard" textFill="#1f2937">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Text fill="#6b7280" strokeType="OUTSIDE" strokeWidth="0.0" text="Unbeatable AI. Do you have what it takes?" textAlignment="CENTER" wrappingWidth="130.0">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Text>
                           </children>
                        </VBox>
                     </children>
                  </HBox>

                  <!-- Bottom Controls -->
                  <HBox alignment="CENTER_RIGHT" layoutX="341.0" layoutY="438.0" prefHeight="40.0" prefWidth="580.0" spacing="10.0">
                     <children>

                        <!-- Start Game Button -->
                        <Button fx:id="startGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleStartGame" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand;" text="Start Game">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </Pane>
         </children>
      </StackPane>
   </children>
   <Button fx:id="backBtn" onAction="#handleBack" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 10;" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="30.0" pickOnBounds="false">
      <graphic>
         <ImageView fitHeight="30" fitWidth="30" preserveRatio="true" pickOnBounds="true">
            <image>
               <Image url="@../../../assets/images/arrow-back.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>
</AnchorPane>
