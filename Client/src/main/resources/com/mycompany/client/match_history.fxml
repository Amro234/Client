<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="720" prefWidth="1280" styleClass="match-history-root" 
            stylesheets="@../../../styles/customStyles.css"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.client.match_recording.MatchHistoryController">
    
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200">
        
        <!-- Header Section -->
        <VBox alignment="CENTER_LEFT" spacing="8">
            <Label text="Match History" styleClass="match-history-title"/>
            <Label text="Browse your past games and watch replays." styleClass="match-history-subtitle"/>
        </VBox>
        
        <!-- Filter Bar and Search -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <!-- Filter Buttons -->
            <HBox spacing="10" styleClass="filter-bar">
                <ToggleButton fx:id="allGamesBtn" text="All Games" styleClass="filter-btn, filter-btn-active" selected="true">
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <Image url="@../../../assets/images/all_games_list.png"/>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="winsBtn" text="Wins" styleClass="filter-btn">
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <Image url="@../../../assets/images/vic_cup.png"/>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="lossesBtn" text="Losses" styleClass="filter-btn">
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <Image url="@../../../assets/images/loss_x.png"/>
                        </ImageView>
                    </graphic>
                </ToggleButton>
                <ToggleButton fx:id="drawsBtn" text="Draws" styleClass="filter-btn">
                    <graphic>
                        <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                            <Image url="@../../../assets/images/draw_handshake.png"/>
                        </ImageView>
                    </graphic>
                </ToggleButton>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <!-- Search Box -->
            <HBox styleClass="search-box" alignment="CENTER_LEFT" spacing="8">
                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                    <Image url="@../../../assets/images/search.png"/>
                </ImageView>
                <TextField fx:id="searchField" promptText="Search opponent..." styleClass="search-field"/>
            </HBox>
        </HBox>
        
        <!-- Match List -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" 
                    styleClass="match-list-scroll" VBox.vgrow="ALWAYS" 
                    prefHeight="400" maxHeight="Infinity">
            <VBox fx:id="matchListContainer" spacing="12" styleClass="match-list-container">
                <!-- Match cards will be added dynamically -->
            </VBox>
        </ScrollPane>
        
    </VBox>
</AnchorPane>
